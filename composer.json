{
    "name": "juniora/laravel-persian-validation",
    "description": "A comprehensive Laravel validation package for Persian text, numbers, dates, and Iranian national identifiers",
    "keywords": [
        "laravel",
        "validation",
        "persian",
        "farsi",
        "validate",
        "validator"
    ],
    "license": "MIT",
    "homepage": "https://github.com/sadegh19b/laravel-persian-validation",
    "authors": [
        {
            "name": "Sadegh Barzegar",
            "email": "sadegh19b@gmail.com",
            "homepage": "https://github.com/sadegh19b",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Sadegh19b\\LaravelPersianValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sadegh19b\\LaravelPersianValidation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sadegh19b\\LaravelPersianValidation\\PersianValidationServiceProvider"
            ]
        }
    }
}
